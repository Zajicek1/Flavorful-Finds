<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Your ultimate destination for finding and sharing delicious recipes.">
    <meta name="keywords" content="recipes, cooking, food, flavor">
    <meta name="author" content="Noah Zajicek">
    <meta name="robots" content="noindex, nofollow, noarchive">
    <link rel="stylesheet" type="text/css" href="style.css" />
    <title>Flavorful Finds - Recipes</title>
  </head>
  <body>
    <header>
      <h1>Flavorful Finds - Recipes</h1>
      <nav class="navpages">
        <div class="dropdown">
          <button class="dropbtn">
            <div class="hamburger"></div>
            <div class="hamburger"></div>
            <div class="hamburger"></div>
          </button>
          <div class="dropdown-content">
            <a href="index.html">Home</a>
			      <a href="ingredients.html">Ingredients</a>
			      <a href="equipment.html">Equipment</a>
          	<a href="users.html">Users</a>
            <a href="ratings.html">Ratings</a>
          </div>
        </div>
      </nav>
    </header>

    <section id="browse-recipes">
      <h2>Browse Recipes</h2>
      <!-- Recipe list table goes here -->
      <table>
        <thead>
          <tr>
            <th>Recipe ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Dietary Restrictions</th>
            <th>Instructions</th>
            <th>Prep Time</th>
            <th>Cook Time</th>
            <th>Serving(s)</th>
            <th>User ID</th>
          </tr>
        </thead>
        <tbody>
          {{#each recipes}}
            <tr>
              <td>{{this.recipeId}}</td>
              <td>{{this.title}}</td>
              <td>{{this.description}}</td>
              <td>{{this.dietaryRestrictions}}</td>
              <td>{{this.instructions}}</td>
              <td>{{this.prepTime}}</td>
              <td>{{this.cookTime}}</td>
              <td>{{this.servings}}</td>
              <td>{{this.userId}}</td>
              <td><button class="del-button">Delete</button></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </section>

    <section id="add-recipe">
      <h2>Add a New Recipe</h2>
      <form>
        <fieldset>
          <label for="recipe-title">Title</label>
          <input type="text" id="recipe-title" name="title">
          <label for="recipe-description">Description</label>
          <textarea id="recipe-description" name="description"></textarea>
          <!-- Additional fields for recipe details go here -->
          <!-- Please note that form data does not get automatically inserted with handlebars -->
        </fieldset>
        <button type="submit">Save</button>
        <button type="button">Cancel</button>
      </form>
    </section>

    <section id="update-recipe">
      <h2>Update Recipe</h2>
      <form>
        <fieldset>
          <label for="recipe-title">Title</label>
          <input type="text" id="recipe-title" name="title">
          <label for="recipe-description">Description</label>
          <textarea id="recipe-description" name="description"></textarea>
          <!-- Additional fields for recipe details go here -->
          <!-- Please note that form data does not get automatically inserted with handlebars -->
        </fieldset>
        <button type="submit">Save</button>
        <button type="button">Cancel</button>
      </form>
    </section>
    
  </body>
</html>
